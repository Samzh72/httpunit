    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run as server",
            "program": "${workspaceFolder}/test/server.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mocha",
            "program": "/usr/local/bin/_mocha",
            "args": [
                "--timeout",
                "1000000",
                "--colors",
                "--recursive",
                "--require",
                "mocha-steps"
            ],
            "env": {
                "NODE_ENV": "testing"
            }
        },
    ]
}